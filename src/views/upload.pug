extends base.pug

block content  
    if errorMessage 
        span=errorMessage
    div
        video#preview
        button#StartBtn Start Recording
    form(method="POST" enctype="multipart/form-data")
        label(for="video")
        input(id="video", name="video" required, accept="video/*", type="file")
        input(name="title" placeholder="Title", required type="text", maxlength=80)
        input(name="description" placeholder="Description", 
            required type="text", minlength=20)
        input(name="hashtags" placeholder="Hashtags, seperated by comma", 
            required type="text")
        input(type="submit", value="Upload Video")

block scripts
    script(src="/static/js/recorder.js")