extends base.pug
include mixin/video

block content 
    form(method="GET").search__form
        input(name="keyword" placeholder="Search by title" required type="text")
        input(type="submit", value="Search Now")
        button
            i.fas.fa-search
    div.video-grid
        each video in videos 
            +video(video)
        else 
            span.empty__message No videos Found.